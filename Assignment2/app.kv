BoxLayout:
    orientation: 'vertical'
    #orientation: 'horizontal'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'List Required'
                on_press: app.handle_listRequired()
            Button:
                text: 'List Completed'
                on_press: app.handle_listCompleted()
            Label:
                id: add_new_item
                text: 'Add A New Item...'
            Label:
                id: name
                text: 'Name:'
            TextInput:
                id: item_name
                text: ''
                write_tab: False
                multiline: False
            Label:
                id: price
                text: 'Price:'
            TextInput:
                id: item_price
                text: ''
                write_tab: False
                multiline: False
            Label:
                id: priority
                text: 'Priority:'
            TextInput:
                id: item_priority
                text: ''
                write_tab: False
                multiline: False
            Button:
                text: "Add Item"
                on_press: app.handle_addItem()
            Button:
                text: "Clear"
                on_press: app.handle_clear()
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: details_bar
                size_hint_y: 0.1
                text: 'Details bar'
            BoxLayout
                orientation: 'vertical'
                #this is where the items will be displayed
                id: items_list_display
                cols: 1
    Label:
        id: status_bar
        size_hint_y: 0.1
        text: 'Click Items to mark them as complete'

